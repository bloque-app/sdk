{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["DOM", "ES2020"],
    "module": "ESNext",
    "jsx": "react-jsx",
    "noEmit": true,
    "strict": true,
    "skipLibCheck": true,
    "isolatedModules": true,
    "resolveJsonModule": true,
    "moduleResolution": "bundler",
    "useDefineForClassFields": true,
    "allowImportingTsExtensions": true,

    "paths": {
      "i18n": ["./i18n.json"],
      "@theme": ["./theme"]
    }
  },
  "include": [
    "./rspress.config.ts",
    "docs/**/*",
    "src/**/*",
    "theme/**/*",
    "search.tsx"
  ],
  "mdx": {
    "checkMdx": true
  }
}
